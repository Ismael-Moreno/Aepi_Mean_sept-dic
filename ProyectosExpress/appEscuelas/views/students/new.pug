extends ../layout

block content
    h2 Crear nuevo Estudiante
    form(method="POST", action="/students/create")
        .form-group
            label Nombre
            input.form-control(type="text", name="nombre", placeholder="Introduce un nombre")
        .form-group
            label Apellidos
            input.form-control(type="text", name="apellidos", placeholder="Introduce los apellidos")
        .form-group
            label Edad
            input.form-control(type="text", name="edad")
        .form-group
            label Dni
            input.form-control(type="text", name="dni")
        .form-group
            label Mail
            input.form-control(type="text", name="mail")
        .form-group
            label Activo
            input.form-control(type="text", name="activo")
        input.btn.btn-primary(type="submit", value="Enviar")